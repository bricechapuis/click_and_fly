<h3>Your bookings</h3>
<br>
<div class="row">
    <h3>My future bookings</h3>
    <% @bookings.each do |booking| %>
    <div class='col-xs-4'>
      <div class="your-booking">
      <h5> <%= booking.plane.title %> </h5>
      <h5> Start Date :<%= booking.start_date %> </h5>
      <h5> End Date :<%= booking.end_date %> </h5>
      <%= link_to 'Delete Booking', plane_booking_path(booking.plane, booking), method: :delete, data: { confirm: 'Are you sure ?'} %>
      <%= link_to 'Edit Booking', edit_plane_booking_path(booking.plane, booking) %>
      </div>
    </div>
    <% end %>
</div>
<div class="row">
    <h3>Future bookings for my planes</h3>
    <% @bookings_for_my_planes.each do |booking| %>
    <div class='col-xs-4'>
      <div class="your-booking">
      <h5> <%= booking.plane.title %> </h5>
      <h5> Start Date :<%= booking.start_date %> </h5>
      <h5> End Date :<%= booking.end_date %> </h5>
      </div>
    </div>
    <% end %>
</div>
