<h1>Your bookings</h1>
<br>
<div class="container">
  <div class="row">
    <h3>My future bookings</h3>
    <% @bookings.each do |booking| %>
      <div class='col-xs-4'>
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://source.unsplash.com/1600x900/?plane,jet');">
          <h5> <%= booking.plane.title %> </h5>
          <h5> Start Date :<%= booking.start_date %> </h5>
          <h5> End Date :<%= booking.end_date %> </h5>
        </div>
      </div>
    <% end %>
  </div>
  <div class="row">
    <h3>Future bookings for my planes</h3>
    <% @bookings_for_my_planes.each do |booking| %>
      <div class='col-xs-4'>
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://source.unsplash.com/1600x900/?plane,jet');">
          <h5> <%= booking.plane.title %> </h5>
          <h5> Start Date :<%= booking.start_date %> </h5>
          <h5> End Date :<%= booking.end_date %> </h5>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="container">
  <div class="row">
    <% @planes.each do |plane| %>
      <div class="col-xs-12 col-sm-6">
        <%= link_to plane_path(plane) do %>
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://source.unsplash.com/1600x900/?plane,jet');">
            <div class="card-category"><%= "#{plane.autonomy} km"%></div>
            <div class="card-description">
              <h2><%= plane.title %></h2>
              <p><%= plane.description %></p>
            </div>
            <img class="card-user" src="https://kitt.lewagon.com/placeholder/users/tgenaitay">
          </div>
          <div class="card-footer">
            <ul class="list-inline">
              <li><%= plane.price %> â‚¬</li>
              <li><i class="fas fa-users"></i> <%= plane.capacity %> people</li>
            </ul>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
